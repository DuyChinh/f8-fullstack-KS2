<h1 class="text-center">Change password</h1>
<form action="/changePassword/<%=req.params.id %>" method="post">
    <input type="text" name="id" value="<%=req.params.id %>" hidden>
    <%-msg.length ?`<div class="alert alert-danger">${msg}</div>`: "" %>
  <div class="mb-3">
    <label for="">Password</label>
    <input type="password" name="password" class="form-control mt-1">
    <p class="text-danger mt-1"><%=req.errors.password %></p>
  </div>

  <div class="mb-3">
    <label for="">Confirm password</label>
    <input type="password" name="confirmPassword" class="form-control mt-1">
    <p class="text-danger mt-1"><%=req.errors.confirmPassword %></p>

  </div>

  <button type="submit" class="btn btn-success">Change</button>
</form>
<!DOCTYPE html>
<html>
  <head>
    <title>Home Page</title>
  </head>
  <body>
    <h1>Home Page</h1>
    <h4>Hello, <%=users[0]?.name %></h1>
    <a href="/signout" class="btn btn-info text-white">Logout</a>
    <div class="mb-3">
      <table class="table table-bordered mt-2">
        <thead>
          <tr>
            <th width="5%">Id</th>
            <th>Name</th>
            <th>Email</th>
            <th width="10%">Password</th>
            <th>Status</th>
            <th>Created_at</th>
            <th>Updated_at</th>
          </tr>


        </thead>
        <tbody>
          <% users?.forEach((user) => { %>
          <tr>
            <td><%= user.id  %></td>
            <td><%= user.name  %></td>
            <td><%= user.email  %></td>
            <td>
              <%= user.password %>
              <a href="/changePassword/<%=user.id %>" class="btn btn-info mt-2 text-white">Change password</a>
            </td>
            
            <td><%= user.status ? 'Kích hoạt' : 'Chưa kích hoạt' %></td>
             <td><%=moment(user.created_at).format('DD/MM/YYYY HH:mm:ss')%></td>
             <td><%=moment(user.updated_at).format('DD/MM/YYYY HH:mm:ss')%></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

    <div class="mb-3">
      <table class="table table-bordered mt-2">
        <thead>
          <tr>
            <th width="5%">Id</th>
            <th>Os</th>
            <th>Browser</th>
            <th>Time login</th>
            <th width="5%">User_id</th>
            <th>Status Login</th>
            <th>Action</th>
          </tr>

        </thead>
        <tbody>
          <% devices.forEach((device) => { %>
          <tr>
            <td><%= device.id  %></td>
            <td><%= device.os  %></td>
            <td><%= device.browser  %></td>
            <td><%=moment(device.time).format('DD/MM/YYYY HH:mm:ss')%></td>
            <td><%= device.user_id %></td>
            <td><%= device.status %></td>
            <td>
              <form action="/logout/<%=device.user_id %>" method="post">
                <button class="btn btn-danger">Logout Device</button>
              </form>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </body>
</html>


<h1>Phân quyền</h1>

<form action="" method="post">
    <table class="table table-bordered">
      <thead>
        <th style="width: 10%"><input type="checkbox" name="" id=""></th>
        <th>Role</th>
      </thead>
      <tbody>
        <% roles.forEach((role) => { %>
        <tr>
          <td>
            <input type="checkbox" name="role" id="<%= role.id %>" <%= userRoles.find((value) => value.id === role.id) ? "checked": "" %> value=<%=role.id %>>
          </td>
          <td><label for="<%= role.id %>"><%= role.name %></label></td>
        </tr>
        <% }) %>
      </tbody>
    </table>
    <button type="submit" class="btn btn-info mt-3 text-white">Lưu Anh Quân</button>
</form>
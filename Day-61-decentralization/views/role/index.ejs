<table class="table table-bordered mt-3">
    <thead>
        <th>Tên</th>
        <th>Sửa</th>
        <th>Xóa</th>
    </thead>
    <tbody>
        <% roles.forEach((role) => { %>
           <tr>
                <td style="width: 60%"><%= role.name %></td>
                <td>
                <a href="" class="btn btn-warning">Sửa</a>
                </td>
                <td>
                    <form action="/role/delete/<%=role.id %>" method="post">
                        <button type="submit" class="btn btn-danger">Xóa</button>
                    </form>
                </td>
           </tr>
        <% }) %>
        
    </tbody>
</table>


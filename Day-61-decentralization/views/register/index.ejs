<div class="w-50 mx-auto">
  <h1 class="text-center">Đăng kí</h1>
  <form action="" method="post">
    <div class="mb-3">
      <label for="">Name</label>
      <input type="text" name="name" class="form-control" placeholder="Name...">
    </div>
    <div class="mb-3">
      <label for="">Email</label>
      <input type="email" name="email" class="form-control" placeholder="Email...">
    </div>

    <div class="mb-3">
      <label for="">Mật khẩu</label>
      <input type="password" name="password" class="form-control" placeholder="Mật khẩu...">
    </div>

    <div class="mb-3">
      <label for="">Nhập lại mật khẩu</label>
      <input type="password" name="confirmPassword" class="form-control" placeholder="Mật khẩu...">
    </div>

    <!-- <div class="d-grid">
        <a href="/auth/google/redirect" class="btn btn-info text-white">Đăng nhập với Google</a>
      </div> -->

    <div class="d-grid">
      <a href="/auth/login" class="btn btn-info mt-3">Login</a>
    </div>

    <div class="d-grid">
      <button type="submit" class="btn btn-primary mt-3">Register</button>
    </div>
  </form>
</div>